<!DOCTYPE PlaneworldML>
<universe>
  <gravity
    vec_x="0.0"
    vec_y="-0.1"
  />
  <!-- Create the active camera -->
  <camera
    hook="Terrain"
    position_x="100.0"
    position_y="0.0"
    viewport_width="300.0"
    viewport_height="180.0"
  />
  
  <config file="config.xml"/>
  
  <!-- Create a terrain -->
  <object type="rigidbody">
    <core
      name="Terrain"
      origin_x="0.0"
      origin_y="50.0"
      dynamics="false"
      gravity="false"
    />
    <shape type="shape_terrain"
      mass="1.0"
      width="3.0e4"
      height_max="100.0"
      ground_resolution="0.8"
      diversity="5.0"
      transition="0.2"
      center_x="0.3"
      center_y="100.0">
      <visuals type="shape_visuals_terrain"/>
    </shape>
  </object>
</universe>
