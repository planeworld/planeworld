<!DOCTYPE PlaneworldML>
<universe>
  <!-- Create the active camera -->
  <camera
    hook="SmallPlanet"
    position_x="100.0"
    position_y="0.0"
    viewport_width="300.0"
    viewport_height="180.0"
  />
  <!-- Create a box -->
  <object type="RigidBody">
    <core
      name="Box"
      mass="250.0"
      origin_x="-20.0"
      origin_y="0.0"
      dynamics="true"
      gravity="true"
    />
    <shape type="Polyline"
      line_type="loop"
      points="0.0,-5.0;
              5.0, 5.0;
             -3.0, 5.0;
             -7.0, 0.0;
             -4.0, 2.0">
      <visuals type="Polyline"/>
    </shape>
  </object>
  <!-- Create sun -->
  <object type="RigidBody">
    <core
      name="Sun"
      mass="1.989e30"
      origin_x="0.0"
      origin_y="149606378.27e3"
      dynamics="true"
      gravity="false"
    />
    <shape
      type="Circle"
      radius="0.6957e9"
      center_x="0.0"
      center_y="0.0">
      <visuals type="Circle"/>
    </shape>
  </object>
  <!-- Create planet earth -->
  <object type="RigidBody">
    <core
      name="Earth"
      mass="5.974e24"
      origin_x="0.0"
      origin_y="-6378.27e3"
      dynamics="true"
      gravity="false"
    />
    <shape
      type="Planet"
      radius="6378.16e3"
      height_max="8000.0"
      ground_resolution="1.0"
      center_x="0.0"
      center_y="0.0">
      <visuals type="Planet"/>
    </shape>
  </object>
  <!-- Create moon -->
  <object type="RigidBody">
    <core
      name="Moon"
      mass="7.349e22"
      origin_x="0.0"
      origin_y="-384.4e6"
      dynamics="true"
      gravity="true"
    />
    <shape
      type="Planet"
      radius="1738.0e3"
      height_max="1000.0"
      ground_resolution="1.0"
      center_x="0.0"
      center_y="0.0">
      <visuals type="Planet"/>
    </shape>
  </object>
  <!-- Create a small planet -->
  <object type="RigidBody">
    <core
      name="SmallPlanet"
      mass="5.974e4"
      origin_x="0.0"
      origin_y="0.0"
      dynamics="true"
      gravity="false"
    />
    <shape
      type="Planet"
      radius="100.0"
      height_max="1.0"
      ground_resolution="0.1"
      center_x="0.0"
      center_y="0.0">
      <visuals type="Planet"/>
    </shape>
  </object>
</universe>
