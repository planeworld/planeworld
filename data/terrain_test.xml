<!DOCTYPE PlaneworldML>
<universe>
  <!-- Create the active camera -->
  <camera
    hook="Terrain"
    position_x="100.0"
    position_y="0.0"
    viewport_width="300.0"
    viewport_height="180.0"
  />
  <!-- Create a box -->
  <object type="RigidBody">
    <core
      name="Terrain"
      mass="1.0"
      origin_x="0.0"
      origin_y="0.0"
      dynamics="false"
      gravity="false"
    />
    <shape type="Terrain"
      width="3.0e6"
      height_max="100.0"
      ground_resolution="0.1"
      center_x="0.0"
      center_y="0.0">
      <visuals type="Terrain"/>
    </shape>
  </object>
</universe>
