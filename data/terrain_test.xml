<!DOCTYPE PlaneworldML>
<universe>
  <gravity
    vec_x="0.0"
    vec_y="-1.81"
  />
  <!-- Create the active camera -->
  <camera
    hook="Terrain"
    position_x="100.0"
    position_y="0.0"
    viewport_width="300.0"
    viewport_height="180.0"
  />
  <!-- Create a terrain -->
  <object type="RigidBody">
    <core
      name="Terrain"
      mass="1.0"
      origin_x="0.0"
      origin_y="50.0"
      dynamics="false"
      gravity="false"
    />
    <shape type="Terrain"
      width="3.0e4"
      height_max="100.0"
      ground_resolution="0.8"
      diversity="5.0"
      transition="0.2"
      center_x="0.3"
      center_y="100.0">
      <visuals type="Terrain"/>
    </shape>
  </object>
</universe>
