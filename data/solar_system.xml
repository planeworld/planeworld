<!DOCTYPE PlaneworldML>
<universe>
  <!-- Create the active camera -->
  <camera
    hook="SmallPlanet"
    position_x="10.0"
    position_y="-1.0"
    viewport_width="700.0"
    viewport_height="430.0"
  />
  
  <object file="sun.xml"/>
  <object file="earth.xml"/>
  <object file="moon.xml"/>
  <object file="outer_planet.xml"/>
  
  <!-- Create a box -->
  <object type="RigidBody">
    <core
      name="Box"
      mass="250.0"
      origin_x="-20.0"
      origin_y="0.0"
      dynamics="true"
      gravity="true"
    />
    <shape type="Polyline"
      line_type="loop"
      points="0.0,-5.0;
              5.0, 5.0;
             -3.0, 5.0;
             -7.0, 0.0;
             -4.0, 2.0">
      <visuals type="Polyline"/>
    </shape>
  </object>
  <!-- Create a small planet -->
  <object type="RigidBody">
    <core
      name="SmallPlanet"
      mass="5.974e4"
      origin_x="0.0"
      origin_y="0.0"
      dynamics="true"
      gravity="false"
    />
    <shape
      type="Planet"
      radius="100.0"
      height_max="1.0"
      ground_resolution="0.01"
      center_x="0.0"
      center_y="0.0">
      <visuals type="Planet"/>
    </shape>
  </object>
</universe>
